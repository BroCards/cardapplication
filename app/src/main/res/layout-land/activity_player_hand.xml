<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player_hand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bivanalzackyh.cardapplication.PlayerHand">

    <TextView
        android:text="Player 1"
        android:textSize="30dp"
        android:textColor="#ff0fff0f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11"
        android:textAlignment="center" />

    <TextView
        android:text="The current score is:"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10"
        android:textAlignment="center" />

    <View
        android:id="@+id/colored_bar2"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/colored_bar"
        android:layout_toEndOf="@+id/colored_bar" />

    <View
        android:id="@+id/colored_bar3"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/colored_bar2"
        android:layout_toEndOf="@+id/colored_bar2" />

    <View
        android:id="@+id/colored_bar4"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/colored_bar3"
        android:layout_toEndOf="@+id/colored_bar3" />

    <View
        android:id="@+id/colored_bar5"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/colored_bar4"
        android:layout_toEndOf="@+id/colored_bar4" />

    <View
        android:id="@+id/colored_bar6"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_alignTop="@+id/colored_bar5"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/colored_bar"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:background="#ffff0000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
