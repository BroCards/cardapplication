<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_table2_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bivanalzackyh.cardapplication.Table2Player">

    <TextView
        android:text="Player 1"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:rotation="180"
        android:textColor="#ffff00ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textAlignment="center" />

    <TextView
        android:text="Player 3"
        android:textSize="30dp"
        android:rotation="0"
        android:textColor="#ff0000ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:background="@drawable/cardback"
        android:layout_alignTop="@+id/colored_bar"
        android:layout_toStartOf="@+id/colored_bar"
        android:layout_marginEnd="39dp" />

    <TextView
        android:text="Player 2"
        android:textSize="30dp"
        android:rotation="90"
        android:textColor="#ffffff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/colored_bar"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:background="#ffff0000"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="186dp" />

    <View
        android:id="@+id/colored_bar1"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:background="#ffff00ff"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/myRectangleView" />

    <View
        android:id="@+id/colored_bar2"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:rotation="90"
        android:background="#ffffff00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <View
        android:id="@+id/colored_bar3"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:background="#ff0000ff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/myRectangleView"
        android:layout_marginStart="30dp" />
</RelativeLayout>
